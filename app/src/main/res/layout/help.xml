<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical|center_horizontal">

    <Button
        android:id="@+id/button_HowTo"
        android:text="@string/instructions"
        android:layout_centerInParent="true"
        style="@style/buttonStyle"
        android:layout_above="@+id/button_About" />

    <Button
        android:id="@+id/button_About"
        android:text="@string/about"
        style="@style/buttonStyle"
        android:layout_centerInParent="true" />

    <Button
        android:layout_below="@+id/button_About"
        android:layout_centerInParent="true"
        android:text="@string/speedometer"
        android:id="@+id/button_SpeedometerHelp"
        style="@style/buttonStyle" />

    <Button
        android:text="@string/back"
        android:id="@+id/button_BackToMain"
        android:layout_alignParentRight="true"
        android:layout_below="@id/button_SpeedometerHelp"
        style="@style/buttonStyle" />

</RelativeLayout>